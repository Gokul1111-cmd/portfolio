rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to all documents
    match /{document=**} {
      allow read: if true;
    }
    
    // Allow writes to projects collection (open for now, secure with auth later)
    match /projects/{projectId} {
      allow write: if true;
    }
    
    // Allow writes to content collection (open for now, secure with auth later)
    match /content/{contentId} {
      allow write: if true;
    }
  }
}
